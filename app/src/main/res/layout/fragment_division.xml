<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cmathew.missingnumbers.DivisionFragment">

    <EditText
        android:id="@+id/dividing_value_entry"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/dividing_divisor_entry"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dividing_quotient_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/dividing_calculate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="do it"/>

</LinearLayout>
